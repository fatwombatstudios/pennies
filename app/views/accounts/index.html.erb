<% content_for :title, "Accounts" %>

<h1>Accounts</h1>

<table id="accounts">
  <tr>
    <th>Name</th>
    <th>Description</th>
    <th>Type</th>
    <th></th>
  </tr>
  <% @accounts.each do |account| %>
  <tr>
    <td><%= account.name %></td>
    <td><%= account.description %></td>
    <td><%= Account.account_types[account.account_type] %></td>
    <td><%= link_to "show", account %></td>
  </tr>
  <% end %>
</table>

<br>

<%= link_to "New account", new_account_path %>
