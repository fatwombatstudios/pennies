<div class="breadcrumbs"><%= link_to "Buckets", buckets_path %> > <%= @bucket.name %></div>

<p style="color: green"><%= notice %></p>
<br>

<div id="<%= dom_id @bucket %>" class="flow-down">
  <div class="card">
    <h1><%= @bucket.name %></h1>
    <div class="amount"><%= number_to_currency @bucket.balance %></div>
  </div>

  <p><%= @bucket.description %></p>
</div>

<br>

<div>
  <%= link_to "Edit", edit_bucket_path(@bucket) %> |
  <%= link_to "Transfer", edit_bucket_path(@bucket) %>
</div>

<br>

<%= render "entries/entries", entries: @entries %>
