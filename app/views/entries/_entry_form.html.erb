<%= form_with(model: entry) do |form| %>
  <% if entry.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(entry.errors.count, "error") %> prohibited this entry from being saved:</h2>

      <ul>
        <% entry.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= form.label :date, style: "display: block" %>
    <%= form.datetime_field :date %>
  </div>

  <div>
    <%= form.label :currency, style: "display: block" %>
    <%= form.text_field :currency %>
  </div>

  <div>
    <%= form.label :amount, style: "display: block" %>
    <%= form.text_field :amount %>
  </div>

  <div>
    <%= form.label :debit_account_id, style: "display: block" %>
    <%= form.select :debit_account_id, @buckets.collect { |a| [a.name, a.id] } %>
  </div>

  <div>
    <%= form.label :credit_account_id, style: "display: block" %>
    <%= form.select :credit_account_id, @buckets.collect { |a| [a.name, a.id] } %>
  </div>

  <div>
    <%= form.submit %>
  </div>
<% end %>
